meta {
  name: Start Stage
  type: http
  seq: 6
}

put {
  url: {{api_base}}/folders/{{test_folder_id}}/stages/{{test_stage_name}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{access_token}}
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "action": "start",
    "notes": "Démarrage de l'étape via Bruno API test"
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Stage should be started", function() {
    expect(res.body).to.have.property('data');
    expect(res.body.data.status).to.equal('in_progress');
    expect(res.body.data.started_at).to.not.be.null;
  });
  
  test("Notes should be set", function() {
    expect(res.body.data.notes).to.contain('Démarrage de l\'étape via Bruno API test');
  });
}