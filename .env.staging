# Staging Environment Configuration
# Used for testing production-like environment

# Application Configuration
NODE_ENV=staging
NEXT_TELEMETRY_DISABLED=1
PORT=3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=${NEXT_PUBLIC_SUPABASE_URL_STAGING}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${NEXT_PUBLIC_SUPABASE_ANON_KEY_STAGING}
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_SERVICE_ROLE_KEY_STAGING}

# Authentication
NEXTAUTH_SECRET=${NEXTAUTH_SECRET_STAGING}
NEXTAUTH_URL=https://staging.your-domain.com

# Database Configuration
DATABASE_URL=${DATABASE_URL_STAGING}

# Redis Configuration
REDIS_URL=${REDIS_URL_STAGING}

# Email Configuration (development SMTP)
SMTP_HOST=${SMTP_HOST_STAGING}
SMTP_PORT=${SMTP_PORT_STAGING}
SMTP_USER=${SMTP_USER_STAGING}
SMTP_PASS=${SMTP_PASS_STAGING}
SMTP_FROM=${SMTP_FROM_STAGING}

# AWS Configuration (staging bucket)
AWS_REGION=${AWS_REGION}
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID_STAGING}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY_STAGING}
AWS_S3_BUCKET=${AWS_S3_BUCKET_STAGING}

# Monitoring and Logging (more verbose for staging)
SENTRY_DSN=${SENTRY_DSN_STAGING}
LOG_LEVEL=debug
ENABLE_METRICS=true

# Security Configuration (relaxed for testing)
CORS_ORIGIN=https://staging.your-domain.com
CSP_REPORT_URI=/api/security/csp-report
RATE_LIMIT_WINDOW=300000
RATE_LIMIT_MAX=500

# Performance Configuration
NEXT_BUILD_CACHE=false
COMPRESS_RESPONSES=true
ENABLE_CDN=false

# Feature Flags (enable all features for testing)
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_DEBUG_TOOLS=true
MAINTENANCE_MODE=false